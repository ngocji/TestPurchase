<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_dialog_70" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="seekbarStyle">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_background</item>
        <item name="android:splitTrack">false</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
    </style>

    <style name="progressStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?colorPrimary</item>
        <item name="android:layout_width">@dimen/progress_size</item>
        <item name="android:layout_height">@dimen/progress_size</item>
    </style>
</resources>